<!DOCTYPE html>
<html>
  <head>
    <title>CCS</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= breadcrumbs separator: " &rsaquo; " %>   
    <header class="header">
      <% if user_signed_in? %>
        <div class="nav__right">
          <%= current_user.name %> 
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :nav__logout %>
          <%= link_to "新規予約", new_schedule_path, class: :nav__btn %>
          <%= link_to "班一覧", teams_path, class: :nav__btn %>
          <%= link_to "商社一覧", trading_companies_path, class: :nav__btn %>
          <%= link_to "トップページ", root_path, class: :nav__btn %>
        </div> 
      <% else %>
        <div class="nav__right">
          <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
          <%= link_to "新規登録", new_user_registration_path, class: :nav__btn %>
        </div>
      <% end %>
    <%= yield %>
  </body>
</html>
